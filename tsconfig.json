{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "lib": [
      "es2017",
      "es2018"
    ],
    "module": "commonjs",
    "outDir": "./",
    "alwaysStrict":true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames":true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ],
  "compileOnSave": true
}
